/* Layout style, version 1.0, 2018/10/10*/
body,html {
	margin:0;
	padding:0;
	font-style:normal;
	font-size:100%;
	font-family:'Antic';
	background-color:#f4f6f9;
}

/* only used debugging of various elements*/
.debug {
	border:1px solid #000000;
}

/* defaulting of p and a-size */
p, a, li, ul, select, form, img {
	color:#000000;
	margin:0;
	padding:0;
	font-size:100%;
	font-family:'Actor';
	font-decoration:none;
}

a:visited, a:active {
	color:#000000;
	font-decoration:none;
}

a:hover {
	color:#464d51;
	font-decoration:none;
}

/* larger size based on percentage */
.fs125 {
	font-size:125%;
}

.fs150 {
	font-size:150%;
}

.fs175 {
	font-size:175%;
}

/* font colours */
.negative {
	color:#ffffff;
}

.grey {
	color:#bab8b8;
}

.green {
	color:green;
}

.white {
	color:white;
}

/* bg colour */
.bg01 {
	background:#545e48;
}

.bg00 {
	background:#ffffff;
}

.bg02 {
	background:#4f4e4e;
}

/* borders */
.border-tiny {
	border:1px solid #000000;

}

/* div container defaulting */
div {
	display:block;
	float:left;
	padding:0;
	margin:0;
}


ul.topnav {
	list-style-type:none;
	display:block;
	width:600px;
	margin:0 auto;
    overflow:hidden;
    /* background-color:#333; */
	font-size:110%;
}

ul.topnav li {
	float:left;
	width:150px;
}

ul.topnav li a {
	text-weight:900!important;
	display: block;
    color:#000000;
    text-align: center;
    padding: 25px 25px;
    text-decoration: none;
}

ul.topnav li a:hover:not(.active) {
	color:blue;
	background-color:#ffffff;
}

ul.topnav li a.active {
	color:white;
	background-color:#4f4e4e;
}

/* oversized navi links */
.navi-link, .logo {
	width:125px;
	height:200px;
	align:center;
}

.navi.link:hover {
	background-color:#000000;
}

.highlight:hover {
	background-color:#e8e8e8;
	float:left;
	display:block;
}

.logo {
	display:block;
	width:300px;
	height:150px;
	margin:50px auto;
}

.navi-link-img {
	width:75px;
	height:100px;
	padding:25px;
}

/* padding */
.pa10 {
	padding:10px;
}

.pa25 {
	padding:25px;
}

/* margin */
.ma1per {
	margin:2%;
}

.ma50 {
	margin:50px;
}

.ma25lr {
	margin:0 25px 0 25px;
}

/* floating of elements */
.left {
	float:left;
	display:flex;
	text-align:left;
}

.right {
	float:right;
	display:flex;
	text-align:right;
}

.tright {
	text-align:right;
}

.tleft {
	text-align:left;
}

.block {
	display:block!important;
	float:left;
	height:auto;
}

/* container sizes */
.min-width {
	min-width:600px;
}

.automargin {
	display:block;
	width:100%;
	margin:0 auto;
}

/* img */
.w30per {
	width:31.3%;
	/* min-width:590px; */
	padding:1%;
}

.w50per {
	width:50%!important;
	min-width:300px;
}

.w100per {
	width:100%;
}

.h40px {
	height:40px;
}

.h100px {
	height:100px;
}
.h200px {
	height:200px;
}

.h35per {
	height:35%;
	min-height:400px;
}


.h50per {
	height:50%;
	min-height:500px;
}

.h70per {
	height:70%;
	min-height:700px;
}

/* img */
.lainattu {
	displaY:grid;
	float:left;
	width:100%;
	height:400px;
	
}

/* info */
.info {
	width:50%;
	height:70px;
}

.info p {
	padding:2.5px 10px 2.5px 10px;
}

/* form, selection, etc*/
select {
	font-size:100%;
	width:200px;
	height:40px;
	margin:0 25px 0 0;
	background:#545e48;
	color:#ffffff;
}

select:hover, select:active {
	color:#ffffff;
}

/* footer */
.footer {
	padding:125px 0 100px 0;
}